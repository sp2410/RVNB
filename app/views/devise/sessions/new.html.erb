<div class = "col-sm-12 col-md-12 col-lg-12">

  <div class = "col-sm-3 col-md-3 col-lg-3">
  </div>

  <div class = "col-sm-6 col-md-6 col-lg-6" style = "text-align: center; ">
        
    <strong><h1 style = "font-size: 110px; font-family: 'Heebo', cursive;  color: #7C064D; margin-bottom: 20px; ">LOG IN</h1></strong>

    <%= render "devise/omniauth/smlinks" %>

    <div class = "col-sm-12 col-md-12 col-lg-12" style = "margin-bottom: 20px;margin-top: 20px;">
        <div class = "col-sm-1 col-md-1 col-lg-1" >
        </div>

        <div class = "col-sm-3 col-md-3 col-lg-3" >
          <hr>
        </div>

        <div class = "col-sm-4 col-md-4 col-lg-4">
          <strong><h1 style = "font-size: 30px; font-family: 'Heebo', cursive;  color: #7C064D; ">OR</h1></strong>
        </div>  

        <div class = "col-sm-3 col-md-3 col-lg-3" >
          <hr>
        </div>

        <div class = "col-sm-1 col-md-1 col-lg-1" >
        </div>        
    </div>    
    

    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>

        <div class="field">          
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary", style: "background-color: #E20049; border: #e20049;" %><br /><br />
      </div>
      
    <% end %>


    <%= render "devise/shared/links" %>
    

  </div>

  <div class = "col-sm-3 col-md-3 col-lg-3">
  </div>

</div>



