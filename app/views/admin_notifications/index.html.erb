<p id="notice"><%= notice %></p>

<h1>Admin Notifications</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_notifications.each do |admin_notification| %>
      <tr>
        <td><%= link_to 'Show', admin_notification %></td>
        <td><%= link_to 'Edit', edit_admin_notification_path(admin_notification) %></td>
        <td><%= link_to 'Destroy', admin_notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

