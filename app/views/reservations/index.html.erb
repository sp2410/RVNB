<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Startdate</th>
      <th>Endate</th>
      <th>Numberofguests</th>
      <th>Needcaptain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.status %></td>
        <td><%= reservation.startdate %></td>
        <td><%= reservation.endate %></td>
        <td><%= reservation.numberofguests %></td>
        <td><%= reservation.needcaptain %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

