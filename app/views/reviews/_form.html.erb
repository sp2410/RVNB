<%= bootstrap_form_for [@listing, @availability, @reservation, @review]  do |form| %>   


  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">    
    <%= form.select :accuracy, ['1','2', '3', '4', '5'] , id: :review_accuracy, :label => "Rate the Description Accuracy" %>
  </div>

  <div class="field">    
  <%= form.select :communication, ['1','2', '3', '4', '5'] , id: :review_communication, :label => "Rate the Communication With Owner" %>  
  </div>

  <div class="field">    
  <%= form.select :cleanliness, ['1','2', '3', '4', '5'] , id: :review_cleanliness, :label => "Rate the Cleanliness of the #{@listing.vehicletype}" %>    
  </div>

  <div class="field">    
    <%= form.select :checkin, ['1','2', '3', '4', '5'] , id: :review_checkin, :label => "How Was Checkin for You" %>    
  </div>

  <div class="field">    
  <%= form.select :owners_behaviour, ['1','2', '3', '4', '5'] , id: :review_owners_behaviour, :label => "How was Owner's Behaviour?" %>    
  </div>

  <div class="field">  
  <%= form.select :valueformoney, ['1','2', '3', '4', '5'] , id: :review_valueformoney, :label => "Was the #{@listing.vehicletype} Worth the Rate per Hour?" %>      
  </div>

  <div class="field">    
    <%= form.text_area :comment, id: :review_comment, :placeholder => "Was it was a good experience for you? \n Would you recommend it to others?" %>
  </div>

  <div class="actions">
    <%= form.submit "Submit Review", class: "btn btn-info", style: "background-color: #E20049; border: #e20049;"  %>
  </div>

<% end %>
