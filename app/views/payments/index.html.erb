<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Paypal email</th>
      <th>Bank routing number</th>
      <th>Bank account number</th>
      <th>Billing name</th>
      <th>Billing street address</th>
      <th>Billing city</th>
      <th>Billing state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.paypal_email %></td>
        <td><%= payment.bank_routing_number %></td>
        <td><%= payment.bank_account_number %></td>
        <td><%= payment.billing_name %></td>
        <td><%= payment.billing_street_address %></td>
        <td><%= payment.billing_city %></td>
        <td><%= payment.billing_state %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

